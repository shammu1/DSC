{
  "$schema": "https://aka.ms/dsc/schemas/v3/bundled/resource/manifest.json",
  "type": "apt",
  "description": "Manages APT packages on Linux",
  "version": "0.1.0",
  "get": {
    "executable": "python3",
    "args": [
      "main.py",
      "get"
    ],
    "input": "stdin"
  },
  "set": {
    "executable": "python3",
    "args": [
      "main.py",
      "set"
    ],
    "implementsPretest": false,
    "input": "stdin",
    "return": "state"
  },
  "delete": {
    "executable": "python3",
    "args": [
      "main.py",
      "delete"
    ],
    "implementsPretest": false,
    "input": "stdin",
    "return": "state"
  },
  "test": {
    "executable": "python3",
    "args": [
      "main.py",
      "test"
    ],
    "input": "stdin",
    "return": "state"
  },
  "export": {
    "executable": "python3",
    "args": [
      "main.py",
      "export"
    ],
    "input": "stdin"
  },
  "schema": {
    "embedded": {
      "$schema": "https://json-schema.org/draft/2020-12/schema#",
      "title": "APT Packages Management",
      "description": "Manages APT Packages on Linux",
      "type": "object",
      "required": [ "name" ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "title": "Name",
          "description": "Name of the APT package."
        },
        "version": {
          "type": "string",
          "title": "Version",
          "description": "Specific version of the package to install."
        },
        "_exist": {
          "type": "boolean",
          "title": "Exist",
          "description": "Whether the package should exist (installed) or not."
        },
        "source": {
          "type": "string",
          "title": "Source",
          "description": "APT source repository for the package."
        },
        "dependencies": {
          "type": "array",
          "title": "Dependencies",
          "items": {
            "type": "string"
          },
          "description": "List of dependent packages.",
          "readOnly": true
        }
      }
    }
  }
}

