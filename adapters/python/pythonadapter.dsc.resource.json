{
  "$schema": "https://aka.ms/dsc/schemas/v3/bundled/resource/manifest.json",
  "type": "Microsoft.DSC.Adapters/Python",
  "version": "0.1.0",
  "kind": "adapter",
  "description": "Manages APT packages on Linux",
  "adapter": {
    "list": {
      "executable": "python3",
      "args": [
        "adapter.py",
        "adapter",
        "--operation",
        "list"
      ]
    },
    "config": "single"
  },
  "get": {
    "executable": "python3",
    "args": [
      "adapter.py",
      "adapter",
      "--operation",
      "get",
      { "resourceTypeArg": "--ResourceType" },
      {
        "jsonInputArg": "--input",
        "mandatory": true
      }
    ],
    "input": "stdin"
  },
  "set": {
    "executable": "python3",
    "args": [
      "adapter.py",
      "adapter",
      "--operation",
      "set",
      { "resourceTypeArg": "-ResourceType" },
      {
        "jsonInputArg": "--input",
        "mandatory": true
      }
    ],
    "implementsPretest": false,
    "input": "stdin",
    "return": "stateAndDiff"
  },
  "test": {
    "executable": "python3",
    "args": [
      "adapter.py",
      "adapter",
      "--operation",
      "test",
      { "resourceTypeArg": "-ResourceType" },
      {
        "jsonInputArg": "--input",
        "mandatory": true
      }
    ],
    "input": "stdin",
    "return": "stateAndDiff"
  },
  "export": {
    "executable": "python3",
    "args": [
      "adapter.py",
      "adapter",
      "--operation",
      "export",
      { "resourceTypeArg": "-ResourceType" },
      {
        "jsonInputArg": "--input",
        "mandatory": true
      }
    ],
    "input": "stdin"
  },
  "validate": {
    "executable": "python3",
    "args": [
      "adapter.py",
      "adapter",
      "--operation",
      "validate",
      { "resourceTypeArg": "-ResourceType" },
      {
        "jsonInputArg": "--input",
        "mandatory": true
      }
    ],
    "input": "stdin"
  },
  "exitCodes": {
    "0": "Success",
    "1": "Error"
  }
}